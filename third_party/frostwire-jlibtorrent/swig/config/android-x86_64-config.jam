import os ;

ANDROID_TOOLCHAIN_BIN = [ os.environ ANDROID_TOOLCHAIN_BIN ] ;
ANDROID_API = [ os.environ android_api ] ;

using clang : x86_64 : $(ANDROID_TOOLCHAIN_BIN)/x86_64-linux-android$(ANDROID_API)-clang++ :
    <cxxflags>-fPIC
    <cxxflags>-std=c++14
    <cxxflags>-DANDROID
    <cxxflags>-fno-strict-aliasing
    <cxxflags>-fvisibility=hidden
    <linkflags>-static-libstdc++
    # debug information
    <cxxflags>-g
    <cxxflags>-gdwarf-4
    <cxxflags>-fdebug-macro
    <cxxflags>-ggdb
    ;
